doctype html
html
  include includes/head.pug

  body
    include includes/navbar.pug

    .container.mt-5
      .row
        .col
          .row
            .col
              h1= business.name
            .col-2
              a.btn.btn-primary(role='button', href='/dashboard/edit') Redigera information
          .row(style='margin-top: 24px;')
            .col
              label
                strong Kontaktperson i INKA
              p
                em
                  = business.inka.name + ' <'
                  a(href= 'mailto:' + business.inka.username)= business.inka.username
                  = '>'
              label
                strong Er kontaktperson
              p
                em= business.contact.name + ' <' + business.contact.email + '>'
          .row.mt-5
            .col
              h3 Avtalskontakt
          .row
            .col
              label
                strong Avtalstecknare
              .row
                .col-1 Namn:
                .col
                  em= business.billing.signer.name
              .row
                .col-1 Email:
                .col
                  em= business.billing.signer.email
              .row
                .col-1 Tel:
                .col
                  em= business.billing.signer.phone
              p 
          .row
            .col
              label
                strong Företagsadress
              p
                em= business.billing.address
          .row
            .col
              label
                strong Organisationsnummer
              p
                em= business.billing.orgNumber
          .row.mt-5
            .col
              h3 Marknadsföringsinformation
          .row
            .col
              label
                strong Företagspitch
              
              if business.media.pitch
                p
                  a(href='/media/' + business.username + '/' + business.media.pitch.name, target='blank')
                    em= business.media.pitch.name
              else
                p
                  em Ingen fil uppladdad
          .row
            .col
              label
                strong Logotyp

              if business.media.logo
                p
                  a(href='/media/' + business.username + '/' + business.media.logo.name, target='blank')
                    em= business.media.logo.name
              else
                p
                  em Ingen fil uppladdad
          .row
            .col
              label
                strong Poster

              if business.media.poster
                p
                  a(href='/media/' + business.username + '/' + business.media.poster.name, target='blank')
                    em= business.media.poster.name
              else
                p
                  em Ingen fil uppladdad
          .row.mt-3
            .col
              label
                strong Om oss
              p
                em= business.info.about
          .row
            .col
              label
                strong Vi erbjuder
              each offer in business.info.offers
                .form-check
                  input.form-check-input(type='checkbox', disabled, checked=offer.value)
                  label.form-check-label
                    em= offer.name
          .row.mt-3
            .col
              label
                strong Vi riktar in oss mot

              .form-check
                input.form-check-input(type='checkbox', disabled, checked= business.info.targets.y1)
                label.form-check-label
                  em Åk 1
              .form-check
                input.form-check-input(type='checkbox', disabled, checked= business.info.targets.y2)
                label.form-check-label
                  em Åk 2
              .form-check
                input.form-check-input(type='checkbox', disabled, checked= business.info.targets.y3)
                label.form-check-label
                  em Åk 3
              .form-check
                input.form-check-input(type='checkbox', disabled, checked= business.info.targets.y4)
                label.form-check-label
                  em Åk 4
              .form-check
                input.form-check-input(type='checkbox', disabled, checked= business.info.targets.y5)
                label.form-check-label
                  em Åk 5
          .row.mt-3
            .col
              label
                strong I:ares roll hos oss
              p
                em= business.info.role
          .row
            .col
              label
                strong Vi värdesätter
              p
                em= business.info.values
          .row
            .col
              label
                strong Visste du att
              p
                em= business.info.didYouKnow
          .row
            .col
              label
                strong Länkar

              .row
                .col-2 Hemsida:
                .col
                  if business.info.social.website
                  a(href= business.info.social.website)
                    em= business.info.social.website
              .row
                .col-2 LinkedIn:
                .col
                  if business.info.social.linkedin
                  a(href= business.info.social.linkedin)
                    em= business.info.social.linkedin
              .row
                .col-2 Facebook:
                .col
                  if business.info.social.facebook
                  a(href= business.info.social.facebook)
                    em= business.info.social.facebook
              .row
                .col-2 Instagram:
                .col
                  if business.info.social.instagram
                  a(href= business.info.social.instagram)
                    em= business.info.social.instagram


    include includes/footer.pug
    include includes/scripts.pug