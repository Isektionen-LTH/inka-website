doctype html
html
  include includes/head.pug

  body
    include includes/navbar.pug

    .container.mt-5
      .row
        .col
          .row
            .col
              h1= business.name
            .col-2
              a.btn.btn-primary(role='button', href='/dashboard/edit') Redigera information
          .row(style='margin-top: 24px;')
            .col
              label
                strong Kontaktperson i INKA
              p
                em
                  = business.inka.name + ' <'
                  a(href= 'mailto:' + business.inka.username)= business.inka.username
                  = '>'
              label
                strong Er kontaktperson
              p
                em= business.contact.name + ' <' + business.contact.email + '>'
          .row.mt-5
            .col
              h3 Avtalskontakt
          .row
            .col
              label
                strong Avtalstecknare
              .row
                .col-1 Namn:
                .col
                  em= business.billing.signer.name
              .row
                .col-1 Email:
                .col
                  em= business.billing.signer.email
              .row
                .col-1 Tel:
                .col
                  em= business.billing.signer.phone
              p 
          .row
            .col
              label
                strong Företagsadress
              p
                em= business.billing.address
          .row
            .col
              label
                strong Organisationsnummer
              p
                em= business.billing.orgNumber
          .row.mt-5
            .col
              h3 Anmälan
          .row.mb-1
            .col
              label
                strong Deltagande
              p
                case business.registration.participation
                  when 'physical'
                    em Den fysiska mässan
                  when 'digital'
                    em Den digitala mässan
                  when 'both'
                    em Både den fysiska och digitala mässan
          .row
            .col
              label
                strong Tillägg 

              .form-check
                input.form-check-input(type='checkbox', disabled, checked)
                label.form-check-label Baspaket (ingår i grunderbjudandet)

              each addon in business.registration.addons
                .form-check
                  input.form-check-input(type='checkbox', disabled, checked= addon.value)
                  label.form-check-label
                    em= addon.name
        //
          .row.mt-5
            .col
              h3 Marknadsföringsinformation
          .row
            .col
              label
                strong Om oss
              p
                em= business.info.about
          .row
            .col
              label
                strong Vi erbjuder
              each offer in business.info.offers
                .form-check
                  input.form-check-input(type='checkbox' disabled checked=offer.value)
                  label.form-check-label
                    em= offer.name

        //.col-4
          h2 Status
      

    include includes/footer.pug
    include includes/scripts.pug